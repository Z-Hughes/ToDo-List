<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>


  <!-- list created dynamically using js and ejs -->
  <div class="box">
    
      <% newListItems.forEach(function(item){ %>
     
      <div class="item">
        <input type="checkbox">
        <p><%= item.name %></p>
      </div>
      <%  }) %>
  

    <!-- form for posting new items to the list -->
    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item">
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>

  </div>

<%- include("footer") -%>
